; args: [vehicle, type]

_vehicle = _this select 0
_type = _this select 1

_event = "_this exec {Common\EH\SpoofMissile.sqs}; _this exec {Player\Effect\SpoofCheck.sqs}; "

? !isNull player: _event = _event + "_this exec {Player\EH\IncomingAirAlert.sqs};"

_vehicle addEventHandler ["IncomingMissile", _event]

; EOF