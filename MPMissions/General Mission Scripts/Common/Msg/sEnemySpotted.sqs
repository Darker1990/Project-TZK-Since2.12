; args: [target, si]

_target = _this select 0
_si = _this select 1

@!(mutexEnemySpotted)
mutexEnemySpotted = true
[] call format["pvEnemy%1%2 = _target", _si, indexSendEnemySpotted]
[] call format["PublicVariable {pvEnemy%1%2}", _si, indexSendEnemySpotted]
indexSendEnemySpotted = indexSendEnemySpotted + 1
indexSendEnemySpotted = indexSendEnemySpotted % 5

~sendDelay/2
mutexEnemySpotted = false