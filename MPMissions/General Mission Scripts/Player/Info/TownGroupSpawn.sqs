; args: [params]

_value = _this select 0

_ti = (_value % 20)
_value = _value - _ti

_si = _value/(20)

? _si != siPlayer: if !(_ti in townsSpawn) then {townsSpawn set [count townsSpawn, _ti]}; townsHibernate = townsHibernate - [_ti]; exit

format["Enemy approaching %1. Town Group Spawn.", (towns select _ti) select tdName] call funcSideMsg
