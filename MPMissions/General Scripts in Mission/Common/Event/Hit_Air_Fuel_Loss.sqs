; args: [unit, causedBy, damage]
_vehicle = _this select 0; _causedBy = _this select 1; _damage = _this select 2; _this = 0;

? _damage < 0.05: exit
@ !mutexTzkAirFuel
mutexTzkAirFuel = true
	; keep engine on working
	_brokenPart = getDammage _vehicle
	? _brokenPart < 0.7: _vehicle setDammage 0; _vehicle setDammage _brokenPart 
	; reduce fuel
	_fuel = fuel _vehicle
	_fuel = _fuel - 0.66 * _damage
	? _fuel <= 0: _fuel = 0.001
	_vehicle setFuel _fuel

mutexTzkAirFuel = false