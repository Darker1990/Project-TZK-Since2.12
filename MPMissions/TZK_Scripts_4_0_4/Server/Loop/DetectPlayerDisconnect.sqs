; args: [group, si, gi]

_group = _this select 0
_si = _this select 1
_gi = _this select 2

? !isServer : exit

#CheckDisconnect
	~30
	? _time > 5*60: [_group, _si, _gi] exec "\TZK_Scripts_4_0_4\Server\Loop\DetectPlayerDisconnect.sqs"; exit
	_leader = leader _group
	? !(local _leader) : goto "CheckDisconnect"
	
[_group, _si, _gi] exec "\TZK_Scripts_4_0_4\Server\PlayerDisconnect.sqs"